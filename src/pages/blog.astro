---
import '../styles/global.css';
const posts = await Astro.glob('./*.mdx');
const sortedPosts = posts.sort((a, b) => 
  new Date(b.frontmatter.publishDate).getTime() - new Date(a.frontmatter.publishDate).getTime()
);

// Transform URLs to match the expected format
const postsWithUrls = sortedPosts.map(post => ({
  ...post,
  url: `/blog${post.url}`
}));
---

<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <title>Blog | Bloom Self-Care Planner</title>
  <meta name="description" content="Expert advice and tips on self-care, wellness, and mental health for busy women">
</head>
<body class="bg-gradient-to-b from-rose-50 to-white min-h-screen">
  <div class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold text-rose-600 mb-8">Bloom Blog</h1>
    <div class="space-y-6">
      {postsWithUrls.map((post) => (
        <article class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
          <h2 class="text-2xl font-semibold mb-2">
            <a href={post.url} class="text-gray-900 hover:text-rose-600 transition-colors">
              {post.frontmatter.title}
            </a>
          </h2>
          <p class="text-gray-600 mb-3">{post.frontmatter.description}</p>
          <time class="text-sm text-gray-500">
            {new Date(post.frontmatter.publishDate).toLocaleDateString()}
          </time>
        </article>
      ))}
    </div>
  </div>
</body>
</html>