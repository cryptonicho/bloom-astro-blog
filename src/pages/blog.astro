---
import '../styles/global.css';
import Header from '../components/Header.astro';

const posts = await Astro.glob('./*.mdx');
const canonicalURL = new URL(Astro.url.pathname, 'https://selfcareplanner.app');
const sortedPosts = posts.sort((a, b) => 
  new Date(b.frontmatter.publishDate).getTime() - new Date(a.frontmatter.publishDate).getTime()
);

// Get featured post (first post)
const featuredPost = sortedPosts[0];
const otherPosts = sortedPosts.slice(1);
---

<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <title>Blog | Bloom Self-Care Planner</title>
  <meta name="description" content="Expert advice and tips on self-care, wellness, and mental health for busy women">
  <link rel="canonical" href={canonicalURL}>
  
  <!-- Favicons -->
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <link rel="shortcut icon" href="/bloom-favicon.png" />
  <meta name="theme-color" content="#ec4899" />
</head>
<body class="bg-gradient-to-br from-rose-50 via-pink-50 to-orange-50 min-h-screen">
  <Header />
  
  <main class="relative">
    <!-- Decorative elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-gradient-to-br from-rose-200/30 to-pink-200/30 rounded-full blur-3xl"></div>
      <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-gradient-to-tr from-orange-200/30 to-pink-200/30 rounded-full blur-3xl"></div>
    </div>
    
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-20">
      <!-- Hero section -->
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-2 bg-gradient-to-r from-rose-100 to-pink-100 text-rose-600 px-4 py-2 rounded-full text-sm font-medium mb-6">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
          </svg>
          <span>Self-Care Insights</span>
        </div>
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-6">
          <span class="bg-gradient-to-r from-rose-600 via-pink-600 to-rose-500 bg-clip-text text-transparent">Bloom Blog</span>
        </h1>
        <p class="text-xl md:text-2xl text-stone-600 max-w-3xl mx-auto leading-relaxed">
          Discover expert advice and practical tips on self-care, wellness, and mental health designed for busy women like you
        </p>
      </div>
      
      <!-- Featured post -->
      {featuredPost && (
        <div class="mb-16">
          <div class="relative group">
            <div class="absolute inset-0 bg-gradient-to-r from-rose-400 to-pink-400 rounded-3xl blur-xl opacity-20 group-hover:opacity-30 transition-opacity duration-300"></div>
            <article class="relative bg-white rounded-3xl shadow-xl overflow-hidden group hover:shadow-2xl transition-all duration-300">
              <a href={featuredPost.url} class="block">
                <div class="grid md:grid-cols-2 gap-8 items-center">
                  <div class="p-8 md:p-12 lg:p-16">
                    <div class="inline-flex items-center gap-2 bg-gradient-to-r from-rose-100 to-pink-100 text-rose-600 px-3 py-1 rounded-full text-sm font-medium mb-4">
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                      </svg>
                      <span>Featured</span>
                    </div>
                    <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4 text-stone-900 leading-tight">
                      {featuredPost.frontmatter.title}
                    </h2>
                    <p class="text-lg text-stone-600 mb-6 leading-relaxed">{featuredPost.frontmatter.description}</p>
                    <div class="flex flex-wrap items-center gap-4 text-sm text-stone-500 mb-8">
                      <div class="flex items-center gap-2">
                        <svg class="w-5 h-5 text-rose-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        <time datetime={featuredPost.frontmatter.publishDate}>
                          {new Date(featuredPost.frontmatter.publishDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                        </time>
                      </div>
                      <div class="flex items-center gap-2">
                        <svg class="w-5 h-5 text-rose-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        <span>{featuredPost.frontmatter.author || 'Bloom Team'}</span>
                      </div>
                    </div>
                    <div class="inline-flex items-center gap-3 bg-gradient-to-r from-rose-500 to-pink-500 text-white px-6 py-3 rounded-full font-semibold group-hover:shadow-lg transition-all duration-300">
                      Read Article
                      <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                      </svg>
                    </div>
                  </div>
                  <div class="relative h-full min-h-[300px] md:min-h-[400px]">
                    {featuredPost.frontmatter.image ? (
                      <img 
                        src={featuredPost.frontmatter.image} 
                        alt={featuredPost.frontmatter.title} 
                        class="w-full h-full object-cover"
                      />
                    ) : (
                      <div class="w-full h-full bg-gradient-to-br from-rose-100 to-pink-100">
                        <div class="absolute inset-0 flex items-center justify-center">
                          <div class="text-rose-300">
                            <svg class="w-32 h-32" fill="currentColor" viewBox="0 0 24 24">
                              <path d="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z"/>
                            </svg>
                          </div>
                        </div>
                      </div>
                    )}
                  </div>
                </div>
              </a>
            </article>
          </div>
        </div>
      )}
      
      <!-- Other posts grid -->
      {otherPosts.length > 0 && (
        <div>
          <h2 class="text-3xl md:text-4xl font-bold mb-8 text-center">
            <span class="bg-gradient-to-r from-stone-800 to-stone-600 bg-clip-text text-transparent">Recent Articles</span>
          </h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {otherPosts.map((post) => (
              <article class="group">
                <a href={post.url} class="block h-full">
                  <div class="relative h-full bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden">
                    <div class="absolute top-0 inset-x-0 h-1 bg-gradient-to-r from-rose-400 via-pink-400 to-rose-400"></div>
                    <div class="p-8">
                      <h3 class="text-xl md:text-2xl font-bold mb-3 text-stone-900 group-hover:text-rose-600 transition-colors leading-tight">
                        {post.frontmatter.title}
                      </h3>
                      <p class="text-stone-600 mb-6 line-clamp-3 leading-relaxed">{post.frontmatter.description}</p>
                      <div class="flex flex-col gap-3 text-sm text-stone-500">
                        <div class="flex items-center gap-2">
                          <svg class="w-4 h-4 text-rose-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                          </svg>
                          <time datetime={post.frontmatter.publishDate}>
                            {new Date(post.frontmatter.publishDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                          </time>
                        </div>
                        <div class="flex items-center gap-2">
                          <svg class="w-4 h-4 text-rose-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                          </svg>
                          <span>{post.frontmatter.author || 'Bloom Team'}</span>
                        </div>
                      </div>
                      <div class="mt-6 inline-flex items-center gap-2 text-rose-600 font-semibold group-hover:text-rose-700">
                        Read more
                        <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                      </div>
                    </div>
                  </div>
                </a>
              </article>
            ))}
          </div>
        </div>
      )}
      
    </div>
  </main>
</body>
</html>