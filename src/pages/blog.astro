---
import '../styles/global.css';
import Header from '../components/Header.astro';

const posts = await Astro.glob('./*.mdx');
const sortedPosts = posts.sort((a, b) => 
  new Date(b.frontmatter.publishDate).getTime() - new Date(a.frontmatter.publishDate).getTime()
);

// Use original URLs since we're on the Astro domain directly
const postsWithUrls = sortedPosts;
---

<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <title>Blog | Bloom Self-Care Planner</title>
  <meta name="description" content="Expert advice and tips on self-care, wellness, and mental health for busy women">
  
  <!-- Favicons -->
  <link rel="icon" type="image/png" href="/bloom-favicon.png?v=6" />
  <link rel="apple-touch-icon" href="/bloom-favicon.png" />
</head>
<body class="bg-gradient-to-br from-rose-50 via-pink-50 to-orange-50 min-h-screen">
  <Header />
  
  <main class="relative">
    <!-- Pink gradient borders on large screens -->
    <div class="hidden lg:block fixed top-0 left-0 w-32 h-full bg-gradient-to-r from-rose-100/50 to-transparent z-0"></div>
    <div class="hidden lg:block fixed top-0 right-0 w-32 h-full bg-gradient-to-l from-pink-100/50 to-transparent z-0"></div>
    
    <div class="relative z-10 max-w-4xl mx-auto px-6 py-12 lg:py-16">
      <!-- Hero section -->
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4 bg-gradient-to-r from-rose-600 to-pink-600 bg-clip-text text-transparent">Bloom Blog</h1>
        <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto">Expert advice and tips on self-care, wellness, and mental health for busy women</p>
      </div>
      
      <!-- Blog posts -->
      <div class="space-y-6">
        {postsWithUrls.map((post) => (
          <article class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group">
            <a href={post.url} class="block">
              <div class="p-8 md:p-10">
                <h2 class="text-2xl md:text-3xl font-bold mb-3 text-gray-900 group-hover:text-rose-600 transition-colors">
                  {post.frontmatter.title}
                </h2>
                <p class="text-gray-600 mb-4 line-clamp-2">{post.frontmatter.description}</p>
                <div class="flex items-center gap-4 text-sm text-gray-500">
                  <div class="flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    <time datetime={post.frontmatter.publishDate}>
                      {new Date(post.frontmatter.publishDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                    </time>
                  </div>
                  <div class="flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                    <span>{post.frontmatter.author || 'Bloom Team'}</span>
                  </div>
                </div>
                <div class="mt-6 inline-flex items-center gap-2 text-rose-600 font-medium">
                  Read more
                  <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>
    </div>
  </main>
</body>
</html>