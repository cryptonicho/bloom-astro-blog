---
// Header component for blog - exact copy of homepage header styling
---

<style>
  .shadow-soft {
    box-shadow: 0 2px 10px -2px hsl(0 0% 0% / 0.1);
  }
</style>

<header class="w-full py-2 md:py-2.5 px-4 md:px-6 bg-white/90 backdrop-blur-xl sticky top-0 z-50 border-b border-rose-100/50 shadow-soft">
  <div class="max-w-7xl mx-auto flex items-center justify-between">
    <!-- Logo -->
    <div class="flex-shrink-0">
      <a href="https://www.selfcareplanner.app" class="group">
        <img 
          src="/lovable-uploads/892dba72-5894-4898-a1ee-3c5cfd4f18c6.png" 
          alt="Bloom" 
          class="h-16 md:h-18 lg:h-20 w-auto transition-all duration-300 hover:scale-105 cursor-pointer -my-2 md:-my-2.5"
          loading="eager"
          decoding="async"
        />
      </a>
    </div>

    <!-- Desktop Navigation - Center -->
    <nav class="hidden lg:block absolute left-1/2 transform -translate-x-1/2">
      <div class="flex items-center space-x-8 xl:space-x-10">
        <a 
          href="https://www.selfcareplanner.app/#how-it-works"
          class="text-stone-600 hover:text-primary transition-all duration-300 font-medium text-base md:text-sm tracking-wide"
        >
          How it Works
        </a>
        <a 
          href="/blog"
          class="text-stone-600 hover:text-primary transition-all duration-300 font-medium text-base md:text-sm tracking-wide"
        >
          Blog
        </a>
        <a 
          href="https://www.selfcareplanner.app/#faq"
          class="text-stone-600 hover:text-primary transition-all duration-300 font-medium text-base md:text-sm tracking-wide"
        >
          FAQ
        </a>
      </div>
    </nav>

    <!-- Actions -->
    <div class="flex items-center gap-3 md:gap-4 h-full">
      <a 
        href="https://www.selfcareplanner.app/?autoQuiz=true"
        class="hidden lg:inline-flex bg-gradient-primary hover:bg-gradient-hover text-white px-4 md:px-6 lg:px-8 py-2.5 md:py-3 text-sm md:text-base font-semibold rounded-full shadow-elegant hover:shadow-glow transform hover:scale-105 transition-all duration-300 border-0 h-auto tracking-wide group min-h-[44px]"
      >
        Begin Your Journey 
        <span class="group-hover:rotate-12 transition-transform duration-300 ml-2">✨</span>
      </a>
      
      <!-- Mobile menu button -->
      <button 
        id="mobile-menu-button"
        class="lg:hidden h-10 w-10 flex items-center justify-center text-stone-600 hover:text-primary hover:bg-rose-50/50 rounded-md"
      >
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>
  
  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden lg:hidden">
    <div class="px-4 pt-2 pb-3 space-y-1">
      <a href="https://www.selfcareplanner.app/#how-it-works" class="block px-3 py-2 text-base font-medium text-stone-600 hover:text-primary hover:bg-rose-50 rounded-md">How it Works</a>
      <a href="/blog" class="block px-3 py-2 text-base font-medium text-stone-600 hover:text-primary hover:bg-rose-50 rounded-md">Blog</a>
      <a href="https://www.selfcareplanner.app/#faq" class="block px-3 py-2 text-base font-medium text-stone-600 hover:text-primary hover:bg-rose-50 rounded-md">FAQ</a>
      <div class="pt-4 pb-3 border-t border-rose-100">
        <a href="https://www.selfcareplanner.app/?autoQuiz=true" class="block mx-3 px-6 py-3 bg-gradient-primary hover:bg-gradient-hover text-white text-center font-semibold rounded-full shadow-elegant hover:shadow-glow transform hover:scale-105 transition-all duration-300 border-0">Begin Your Journey ✨</a>
      </div>
    </div>
  </div>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>